@using EPiServer.Core
@using OptimizelyGraph.Business.Rendering
@using PictureRenderer.Optimizely;

@model SitePageData

<div>
    @using (Html.BeginConditionalLink(Model.HasTemplate(), Url.PageLinkUrl(Model), Model.PageName, null, Url.PageLinkTarget(Model)))
    {
        <!-- with this -->
        <div class="img-wrapper mb-3" @Html.EditAttributes(x => x.PageImage)>
            @Html.Picture(Model.PageImage, PictureProfiles.Teaser)
        </div>
        <h2>@Model.PageName</h2>
        <p>@Model.TeaserText</p>
    }
</div>
